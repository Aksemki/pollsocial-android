<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Для разработки: доверяем всем сертификатам -->
    <base-config>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Разрешаем самоподписанные сертификаты для конкретных доменов/IP -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">10.0.0.0</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- ⚠️ ДЛЯ РАЗРАБОТКИ: принимаем любые сертификаты -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>

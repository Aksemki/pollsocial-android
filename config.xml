<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pollsocial.app" version="3.3.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PollSocial Pro</name>
    <description>Социальная платформа для создания опросов и ставок</description>
    <author email="support@pollsocial.com" href="https://pollsocial.com">
        PollSocial Team
    </author>
    
    <content src="index.html" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="*" />
    
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#667eea" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        
        <!-- Network Security Config для самоподписанного сертификата -->
        <resource-file src="www/res/xml/network_security_config.xml" 
                       target="app/src/main/res/xml/network_security_config.xml" />
        
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
    </platform>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>

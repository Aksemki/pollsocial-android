<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pollsocial.app" version="4.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PollSocial Pro</name>
    <description>PollSocial Pro - HTTPS Production</description>
    <author email="support@pollsocial.com" href="https://pollsocial.duckdns.org">
        PollSocial Team
    </author>
    
    <content src="index.html" />
    
    <access origin="*" />
    <allow-intent href="https://*/*" />
    <allow-navigation href="https://*/*" />
    
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarBackgroundColor" value="#667eea" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    
    <platform name="android">
        <allow-intent href="market:*" />
        
        <preference name="android-minSdkVersion" value="24" />
        <preference name="android-targetSdkVersion" value="34" />
    </platform>
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
